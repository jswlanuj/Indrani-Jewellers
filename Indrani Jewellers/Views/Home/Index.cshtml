@model IEnumerable<Indrani_Jewellers.Models.ProductMasterModel>

<div class="container ">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-lg-3 col-sm-6 mb-4">
                <div class="card h-100 shadow-sm border-top border-5 rounded">
                    <img src="@Url.Content(product.ImageUrl.Replace('\\', '/'))" class="card-img-top rounded" alt="Product Image" />
                    <div class="card-body">
                        <h5 class="card-title text-center text-uppercase">@product.productName</h5>
                        <p class="text-center mb-0">Weight: <span class="text-decoration-line-through">@product.gms</span> Gm</p>
                    </div>
                    <div class="card-footer text-center">
                        <a asp-action="Details" asp-route-id="@product.productId" class="btn btn-primary w-100">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>