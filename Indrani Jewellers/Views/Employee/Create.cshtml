@model Indrani_Jewellers.Models.EmployeeModel

@{
    ViewData["Title"] = "Create Employee";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card" id="employeeForm">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header align-items-center d-flex">
                        <h4 class="card-title mb-0 flex-grow-1">Add New Employee</h4>
                    </div>
                    <br />
                    <div class="card-body">
                        <div class="live-preview">
                            <form method="post" asp-controller="Employee" asp-action="Create" class="row g-3 needs-validation" novalidate>
                                <div class="row">
                                    <div class="col-6">
                                        <div class="mb-3">
                                            <label asp-for="name" class="control-label"></label>
                                            <input asp-for="name" class="form-control" required />
                                            <span asp-validation-for="name" class="text-danger"></span>
                                        </div>
                                    </div>
                                                                      
                                    <div class="col-6">
                                        <div class="mb-3">
                                            <label asp-for="email" class="control-label"></label>
                                            <input asp-for="email" type="email" class="form-control" required />
                                            <span asp-validation-for="email" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-6">
                                        <div class="mb-3">
                                            <label asp-for="contact" class="control-label"></label>
                                            <input asp-for="contact" class="form-control" required />
                                            <span asp-validation-for="contact" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-6">
                                        <div class="mb-3">
                                            <label asp-for="address" class="control-label"></label>
                                            <input asp-for="address" class="form-control" required />
                                            <span asp-validation-for="address" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-6">
                                        <div class="mb-3">
                                            <label asp-for="location" class="control-label"></label>
                                            <input asp-for="location" class="form-control" required />
                                            <span asp-validation-for="location" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-6">
                                        <div class="mb-3">
                                            <label asp-for="country" class="control-label"></label>
                                            @Html.DropDownListFor(M => M.country, new SelectList(ViewBag.Country, "countryId", "countryName"), "Select Country Name", new { @class = "form-select ", @required = "true", @validate = "true"})
                                            <span asp-validation-for="country" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-6">
                                        <div class="mb-3">
                                            <label asp-for="state" class="control-label"></label>
                                            @Html.DropDownListFor(M => M.state, new SelectList(ViewBag.State, "stateId", "stateName"), "Select State Name", new { @class = "form-select ", @required = "true", @validate = "true" })
                                            <span asp-validation-for="state" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-6">
                                        <div class="mb-3">
                                            <label asp-for="city" class="control-label"></label>
                                            @Html.DropDownListFor(M => M.city, new SelectList(ViewBag.City, "cityId", "cityName"), "Select City Name", new { @class = "form-select ", @required = "true", @validate = "true" })
                                            <span asp-validation-for="city" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-6">
                                        <div class="mb-3">
                                            <label asp-for="role" class="control-label"></label>
                                            @Html.DropDownListFor(M => M.role, new SelectList(ViewBag.Role, "roleId", "role"), "Select Role", new { @class = "form-select ", @required = "true", @validate = "true" })
                                            <span asp-validation-for="role" class="text-danger"></span>
                                        </div>
                                    </div>
                                   
                                    <div class="col-lg-12">
                                        <div class="text-end">
                                            <a class="btn btn-primary btn-block btn-label waves-effect waves-light" asp-controller="Employee" asp-action="Index">
                                                <i class="ri-user-smile-line label-icon align-middle fs-16 me-2"></i>Back to List
                                            </a>
                                            <button type="submit" class="btn btn-success btn-block btn-label waves-effect waves-light">
                                                <i class="ri-check-double-line label-icon align-middle fs-16 me-2"></i>Create
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--end col-->
</div>
