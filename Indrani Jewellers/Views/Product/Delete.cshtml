@model Indrani_Jewellers.Models.ProductMasterModel

@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card" id="leadsList">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header align-items-center d-flex">
                        <h4 class="card-title mb-0 flex-grow-1">View Product</h4>
                    </div>
                    <br />
                    <div class="card-body">
                        <div class="live-preview">
                            <form id="deleteForm" method="post" asp-controller="Product" asp-action="DeletePost" class="row g-3 needs-validation">
                                <div class="row">
                                    <div class="col-6">
                                        <div class="mb-3">
                                            <input type="hidden" id="productId" name="id" value="@Model.productId" />
                                            <label asp-for="productName" class="control-label"></label>
                                            <input asp-for="productName" class="form-control" disabled /> <!-- Disabled input -->
                                            <span asp-validation-for="productName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="mb-3">
                                            <label asp-for="quantity" class="control-label"></label>
                                            <input asp-for="quantity" class="form-control" disabled /> <!-- Disabled input -->
                                            <span asp-validation-for="quantity" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="mb-3">
                                            <label asp-for="gms" class="control-label"></label>
                                            <input asp-for="gms" class="form-control" disabled /> <!-- Disabled input -->
                                            <span asp-validation-for="gms" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="text-end">
                                            <a class="btn btn-primary btn-block btn-label waves-effect waves-light" asp-controller="Product" asp-action="Index">
                                                <i class="ri-user-smile-line label-icon align-middle fs-16 me-2"></i>Back to List
                                            </a>
                                            <button type="button" class="btn btn-danger btn-label waves-effect waves-light btn-block" onclick="deleteRecord()">
                                                <i class="ri-check-double-line label-icon align-middle fs-16 me-2"></i>Delete
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="d-none code-view">
                            <pre class="language-markup"></pre>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/assets/libs/sweetalert2/sweetalert2.all.min.js"></script>
<script src="~/assets/libs/sweetalert2/sweetalert2.min.js"></script>        

<script>
    function deleteRecord() {
        debugger;
        Swal.fire({
            title: 'Do you really want to delete this record?',
            showCancelButton: true,
            confirmButtonText: 'Delete',
        }).then((result) => {
            if (result.isConfirmed) {
                var id = document.getElementById("productId").value;
                document.getElementById("deleteForm").submit();
            }
        });
    }
</script>
