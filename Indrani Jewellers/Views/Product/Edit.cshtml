@model Indrani_Jewellers.Models.ProductMasterModel

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card" id="leadsList">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header align-items-center d-flex">
                        <h4 class="card-title mb-0 flex-grow-1">Update Product</h4>
                    </div>
                    <br />
                    <div class="card-body">
                        <div class="live-preview">
                            <form method="post" asp-controller="Product" asp-action="Edit" class="row g-3 needs-validation" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col-10">
                                        <div class="col-10">
                                            <div class="mb-3">
                                                <input type="hidden" asp-for="productId" />
                                                <input type="hidden" asp-for="ImageUrl" />
                                                <label asp-for="productName" class="control-label"></label>
                                                <input asp-for="productName" class="form-control" />
                                                <span asp-validation-for="productName" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-10">
                                            <div class="mb-3">
                                                <label asp-for="quantity" class="control-label"></label>
                                                <input asp-for="quantity" class="form-control" />
                                                <span asp-validation-for="quantity" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-10">
                                            <div class="mb-3">
                                                <label asp-for="gms" class="control-label"></label>
                                                <input asp-for="gms" class="form-control" />
                                                <span asp-validation-for="gms" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-10">
                                            <div class="mb-3">
                                                <label asp-for="ImageUrl" class="control-label"></label>
                                                <input type="file" name="file" asp-for="ImageUrl" class="form-control" />
                                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-10">
                                            <div class="text-end">
                                                <a class="btn btn-primary btn-block btn-label waves-effect waves-light" asp-controller="Product" asp-action="Index">
                                                    <i class="ri-user-smile-line label-icon align-middle fs-16 me-2"></i>Back to List
                                                </a>
                                                <button type="submit" class="btn btn-success btn-block btn-label waves-effect waves-light">
                                                    <i class="ri-check-double-line label-icon align-middle fs-16 me-2"></i>Update
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-2">
                                        <img src="@Model.ImageUrl" width="100%" style="border-radius:5px;border:1px solid #bbb9b9" />

                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="d-none code-view">
                            <pre class="language-markup"></pre>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
